<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut04.mvvm.sencillo.RandomMVVM">

    <TextView
        android:id="@+id/id_ut04_mvvm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_ut04_mvvm_gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeneraRandom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_ut04_mvvm_label" />

    <Button
        android:id="@+id/id_ut04_mvvm_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obtener random"
        app:layout_constraintEnd_toEndOf="@+id/id_ut04_mvvm_gen"
        app:layout_constraintStart_toStartOf="@+id/id_ut04_mvvm_gen"
        app:layout_constraintTop_toBottomOf="@+id/id_ut04_mvvm_gen" />
</androidx.constraintlayout.widget.ConstraintLayout>