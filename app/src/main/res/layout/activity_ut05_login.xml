<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visibility="visible">

    <TextView
        android:id="@+id/ut05_id_login_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Pass"
        app:layout_constraintStart_toStartOf="@+id/ut05_id_login_text"
        app:layout_constraintTop_toBottomOf="@+id/ut05_id_login_text" />

    <TextView
        android:id="@+id/ut05_id_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ut05_id_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/ut05_id_login"
        app:layout_constraintStart_toStartOf="@+id/ut05_id_login"
        app:layout_constraintTop_toTopOf="@+id/ut05_id_login_text2" />

    <EditText
        android:id="@+id/ut05_id_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ut05_id_login_text"
        app:layout_constraintTop_toTopOf="@+id/ut05_id_login_text" />

    <Button
        android:id="@+id/ut05_id_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ut05_id_password" />

    <ProgressBar
        android:id="@+id/ut05_id_login_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="@+id/ut05_id_button_login"
        app:layout_constraintStart_toStartOf="@+id/ut05_id_button_login"
        app:layout_constraintTop_toTopOf="@+id/ut05_id_button_login" />

    <TextView
        android:id="@+id/ut05_id_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/design_default_color_error"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ut05_id_button_login" />
</androidx.constraintlayout.widget.ConstraintLayout>